{
  "name": "cribliv-v2",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "prepare": "husky",
    "dev": "turbo run dev --parallel",
    "dev:web": "pnpm --filter @cribliv/web dev",
    "dev:api": "pnpm --filter @cribliv/api dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "db:migrate": "pnpm --filter @cribliv/api db:migrate",
    "db:seed": "pnpm --filter @cribliv/api db:seed",
    "worker": "pnpm --filter @cribliv/api worker"
  },
  "devDependencies": {
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "turbo": "^2.1.3",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
